<div id="modal-event-form" class="modal-dialog" role="dialog" aria-labelledby="agendaModalLabel" aria-hidden="true">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 id="agendaModalLabel"> {{ 'add_event'|trans({}, 'agenda') }}</h4>
        </div>
        <form method="post"
              action="{{ action }}"
              id="form-event" {{ form_enctype(form) }}
              role="form"
        >
            <div class="modal-body">
                {% if form.title is defined %} {{ form_row(form.title) }} {% endif %}
                {% if form.isTask is defined %} {{ form_row(form.isTask) }} {% endif %}
                {% if form.isAllDay is defined %} {{ form_row(form.isAllDay) }} {% endif %}
                {% if form.start is defined %} {{ form_row(form.start) }} {% endif %}
                {% if form.end is defined %} {{ form_row(form.end) }} {% endif %}
                {% if form.workspace is defined %} {{ form_row(form.workspace) }} {% endif %}
                {% if form.description is defined %} {{ form_row(form.description) }} {% endif %}
                {% if form.priority is defined %} {{ form_row(form.priority) }} {% endif %}
                {% if form.users is defined %} {{ form_row(form.users) }} {% endif %}
                <div class="collapse" id="reccurenceButton">
                    <input type="checkbox" data-toggle="collapse" data-target="#reccurenceData" aria-expanded="false" aria-controls="reccurenceData">
                        {{  'form.recurrence'|trans({}, 'agenda') }}
                    </input>
                    <div class="collapse" id="reccurenceData">
                        {% if form.recurrence is defined %} {{ form_row(form.recurrence) }} {% endif %}
                        {% if form.endRecurrence is defined %} {{ form_row(form.endRecurrence) }} {% endif %}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{'cancel'|trans({}, 'agenda') }}</button>
                <button type="submit" class="btn btn-primary">{{ 'add_event'|trans({}, 'agenda') }}</button>
            </div>
        </form>
    </div>
</div>